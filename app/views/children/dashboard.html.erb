<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">こんにちは、<%= current_child.name %>さん！</h1>
    <%= link_to "新しいメモを書く", new_child_memo_path(current_child), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      <% @memos.each do |memo| %>
        <li>
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <h2 class="text-lg font-medium text-gray-900 truncate">
                  <%= memo.title %>
                </h2>
                <p class="mt-1 text-sm text-gray-500">
                  <%= memo.category %>
                </p>
              </div>
              <div class="ml-4 flex-shrink-0 flex space-x-2">
                <%= link_to "編集", edit_child_memo_path(current_child, memo), class: "text-indigo-600 hover:text-indigo-900" %>
                <%= button_to "削除", child_memo_path(current_child, memo), 
                    method: :delete, 
                    class: "text-red-600 hover:text-red-900",
                    form: { data: { turbo_confirm: "本当に削除しますか？" } } %>
              </div>
            </div>
            <div class="mt-2">
              <p class="text-sm text-gray-700">
                <%= memo.body %>
              </p>
            </div>
            <% if memo.images.attached? %>
              <div class="mt-4 grid grid-cols-2 gap-2">
                <% memo.images.each do |image| %>
                  <%= image_tag image, class: "w-full h-32 object-cover rounded" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
