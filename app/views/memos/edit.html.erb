<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">メモを編集</h1>

    <%= form_with(model: [@memo.child, @memo], local: true, class: "bg-white rounded-lg shadow-md p-6") do |f| %>
      <% if @memo.errors.any? %>
        <div class="bg-red-50 text-red-500 p-4 rounded-lg mb-6">
          <h2 class="text-lg font-semibold mb-2">
            <%= @memo.errors.count %>件のエラーがあります：
          </h2>
          <ul class="list-disc list-inside">
            <% @memo.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :category, "カテゴリ", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :category, Memo::CATEGORIES, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :body, "本文", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :body, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :images, "画像", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="flex text-sm text-gray-600">
              <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                <span>画像をアップロード</span>
                <%= f.file_field :images, multiple: true, class: "sr-only", id: "file-upload" %>
              </label>
              <p class="pl-1">またはドラッグ＆ドロップ</p>
            </div>
            <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
          </div>
        </div>
      </div>

      <% if @memo.images.attached? %>
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-700 mb-2">現在の画像</h3>
          <div class="grid grid-cols-2 gap-4">
            <% @memo.images.each do |image| %>
              <div class="relative">
                <%= image_tag image, class: "w-full h-32 object-cover rounded" %>
                <%= link_to "削除", delete_image_child_memo_path(@memo.child, @memo, image_id: image.id), 
                    method: :delete,
                    data: { confirm: "この画像を削除しますか？" },
                    class: "absolute top-2 right-2 bg-red-500 text-white rounded-full p-1 hover:bg-red-600" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="flex justify-end space-x-4">
        <%= link_to "キャンセル", child_memos_path(@memo.child), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= f.submit "更新", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
